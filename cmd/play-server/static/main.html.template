<!doctype html>
<html>
<head>
  <title>Couchbase API Playground</title>
</head>
<body>
  <style>
    .main {
      display: flex;
      flex-direction: row;
      margin-bottom: 40px;
      border-top: 1px solid #666;
    }

    .main .langs {
      flex-grow: 1;
      margin-right: 20px;
    }

    .main .form {
      flex-grow: 10;
    }

    input, textarea, pre {
      display: block;
      margin-bottom: 10px;
    }

    textarea {
      width: 90%;
      height: 20em;
      overflow-y: scroll;
      background-color: #333;
      color: #eee;
      font-family: courier, monospace;
    }

    .output {
      width: 90%;
      font-family: courier, monospace;
    }

    .footer {
      border-top: 1px solid #666;
      padding-top: 10px;
      font-size: 8pt;
      color: #666;
    }
  </style>

  <h1>Couchbase API / SDK Playground</h1>

  <div class="main">
    <div class="langs">
      <h2>Languages</h2>
      <ul class="langs">
      {{range .Langs}}
        <li>
          <a href="?lang={{index . 0}}">{{index . 1}}</a>
        </li>
      {{end}}
      </ul>
    </div>

    <div class="form">
      <h2>Playground for {{.LangName}}</h2>

      <form action="run" method="post">
        <input name="lang"
               type="hidden" value="{{.Lang}}"/>

        <input type="submit" value="run"/>

        <textarea name="code"
                  autocorrect="off"
                  autocomplete="off"
                  autocapitalize="off"
                  spellcheck="false">{{.Code}}</textarea>

        <input type="submit" value="run"/>
      </form>

      {{if .Output}}
        <div>
          <h2>Output</h2>
          <div class="output">{{.Output}}</div>
        </div>
      {{end}}
    </div>
  </div>

  <div class="footer">
    powered by the smallcb project
  </div>
</body>
</html>
