<!doctype html>
<html>
<head>
  <title>Couchbase API / SDK Playground</title>
  <link rel="stylesheet" type="text/css" href="/static/style.css">
  <style>
    .session-info {
      margin-top: 20px;
      margin-bottom: 20px;
      border-bottom: 1px solid #666;
      padding-bottom: 20px;
    }
    .session-info h2 {
      font-weight: bold;
      color: #464;
    }
    .session-info div {
      margin-bottom: 10px;
      margin-left: 20px;
    }
    .session-info div.connection {
      margin: 0 0 20px 20px;
      padding: 0 0 0 0;
      white-space: pre;
      font-size: 9pt;
      font-family: monospace;
    }
    .main ul.examples {
      padding-left: 20px;
    }
    .main ul.examples li {
      list-style: none;
    }
    .main ul.examples li.current {
      list-style: square;
      color: green;
    }
    .main textarea.code {
      width: 95%;
      height: 20rem;
      overflow-y: scroll;
      background-color: #333;
      color: #eee;
      font-family: courier, monospace;
    }
    .main input.run {
      border: 2px solid #888;
      padding: 5px 40px 5px 40px;
      background-color: #9c9;
      font-weight: bold;
      color: #666;
      cursor: pointer;
    }
    .main input.run:hover {
      background-color: #9e9;
      color: #666;
    }
    .main input.run.waiting,
    .main input.run.waiting:hover {
      background-color: orange;
      cursor: wait;
    }
    .main .main-output {
      flex-basis: 28rem;
      flex-grow: 8;
    }
    .main .main-output iframe.output {
      width: 90%;
      height: 20rem;
      border: 1px solid #888;
    }
  </style>
  <script>
    function onRunSubmit() {
      function checkDone() {
        var b = document.getElementById('run');

        b.disabled = true;
        b.className = "run waiting";

        var o = document.getElementById('output');

        var odoc = o.contentDocument || o.contentWindow.document;
        if (odoc.readyState == "complete" &&
            odoc.contentType == "text/plain") {
          b.disabled = false;
          b.className = "run";
          return;
        }

        setTimeout(checkDone, 500);
      }

      setTimeout(checkDone, 50);
    }
  </script>
</head>
<body>
  <div class="header flex-row">
    <div class="header-title">
      <a href="/{{if .Session}}?s={{.Session.SessionId}}{{end}}">
        <h1>Couchbase API / SDK Playground</h1>
      </a>
    </div>

    <div class="header-links">
      {{if .Session}}
        <a href="/session-exit?s={{.Session.SessionId}}">stop test-drive</a>
      {{else}}
        <a href="/session">start a test-drive</a>
      {{end}}
      <a href="https://docs.couchbase.com">docs</a>
      <a href="https://www.couchbase.com">couchbase.com</a>
    </div>
  </div>

  {{if .Msg}}
    <div class="msg">{{.Msg}}</div>
  {{end}}

  {{if .Session}}
    <div class="session-info">
      <h2>Couchbase Server Test-Drive Session</h2>
      <div>
        Hello, {{.Session.FullName}}.
        Your test-drive session is active until there's 5 minutes of inactivity.
      </div>
      <div>
        To connect to your test-drive Couchbase Server
        over the internet from the SDK, use...
      </div>
      <div class="connection">
        Java   ... [host / user / pswd and connect string examples here]
        NodeJS ... [host / user / pswd and connect string examples here]
        Python ... PasswordAuthenticator('{{.Session.CBUser}}', '{{.Session.CBPswd}}')
        C#     ... [host / user / pswd and connect string examples here]
      </div>
      <div>
        The following online examples will also run
        against your test-drive instance...
      </div>
    </div>
  {{end}}

  <div class="main flex-row">
    <div class="main-left">
      <h2>Examples</h2>

      <ul class="examples">
      {{range .Examples}}
        <li {{if eq .Name $.Name}}class="current"{{end}}>
          <a href="/{{$.ExamplesDir}}/{{.Name}}{{if $.Session}}?s={{$.Session.SessionId}}{{end}}">
            {{.Title}}
          </a>
        </li>
      {{end}}
      </ul>
    </div>

    <div class="main-center">
      {{if or .Name .Lang .Code}}
        <h2>
          {{if .Title}}{{.Title}}{{else}}API / SDK Playground{{end}}
        </h2>

        <div>
          {{if .InfoBefore}}
            <div class="info infoBefore">{{.InfoBefore}}</div>
          {{end}}

          <form action="/run" method="post" target="output">
            {{if .Session}}
              <input name="s"
                     type="hidden" value="{{.Session.SessionId}}"/>
            {{end}}

            <input name="lang"
                   type="hidden" value="{{.Lang}}"/>

            <textarea name="code"
                      class="code"
                      wrap="off"
                      autocorrect="off"
                      autocomplete="off"
                      autocapitalize="off"
                      spellcheck="false">{{.Code}}</textarea>

            <input type="submit" value="run" class="run" id="run"
                   onclick="return onRunSubmit()"/>
          </form>

          {{if .InfoAfter}}
            <div class="info infoAfter">{{.InfoAfter}}</div>
          {{end}}
        </div>
      {{end}}
    </div>

    <div class="main-output">
      {{if or .Name .Lang .Code}}
        <h2>Output</h2>

        <iframe name="output" id="output" class="output"></iframe>
      {{end}}
    </div>
  </div>

  <div class="footer">
    powered by the smallcb project from Couchbase Labs
  </div>
</body>
</html>
