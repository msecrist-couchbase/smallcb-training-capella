<!doctype html>
<html>
<head>
  <title>Couchbase API Playground</title>
</head>
<body>
  <style>
    .flex-row {
      display: flex;
      flex-direction: row;
    }

    .main {
      margin-bottom: 80px;
      border-top: 1px solid #666;
    }

    .main .main-left {
      flex-grow: 1;
      margin-right: 20px;
    }

    .main .main-center {
      flex-grow: 10;
    }

    .main .main-output {
      flex-grow: 10;
    }

    .main .main-output iframe {
      width: 90%;
      height: 20rem;
    }

    input, textarea, pre {
      display: block;
      margin-bottom: 10px;
      font-size: 13px;
    }

    textarea {
      width: 95%;
      height: 20rem;
      overflow-y: scroll;
      background-color: #333;
      color: #eee;
      font-family: courier, monospace;
    }

    .footer {
      border-top: 1px solid #666;
      padding-top: 10px;
      font-size: 10pt;
      color: #666;
    }
  </style>

  <h1>Couchbase API / SDK Playground</h1>

  <div class="main flex-row">
    <div class="main-left">
      <h2>Examples</h2>

      <ul class="langs">
      {{range .NameTitles}}
        <li>
          <a href="/example/{{.Name}}">{{.Title}}</a>
        </li>
      {{end}}
      </ul>
    </div>

    <div class="main-center">
      <h2>
        {{if .Title}}{{.Title}}{{else}}API / SDK Playground{{end}}
      </h2>

      <div class="item">
        <form class="item-form"
              action="/run" method="post" target="output">
          <input name="lang"
                 type="hidden" value="{{.Lang}}"/>

          <textarea name="code"
                    wrap="off"
                    autocorrect="off"
                    autocomplete="off"
                    autocapitalize="off"
                    spellcheck="false">{{.Code}}</textarea>

          <input type="submit" value="run"
                 onclick="document.getElementById('output').contentDocument.body.innerHTML = 'waiting...'; return"/>
        </form>
      </div>
    </div>

    <div class="main-output">
      <h2>Output</h2>

      <iframe name="output" id="output"></iframe>
    </div>
  </div>

  <div class="footer">
    powered by the smallcb project
  </div>
</body>
</html>
