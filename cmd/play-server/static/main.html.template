<!doctype html>
<html>
<head>
  <title>Couchbase API Playground</title>
</head>
<body>
  <style>
    input, textarea, pre {
      display: block;
    }

    textarea {
      width: 60em;
      height: 20em;
      background-color: #333;
      color: #eee;
      font-family: courier, monospace;
    }
  </style>

  <h1>Couchbase API Playground</h1>

  <div>
    powered by smallcb
  </div>

  <div>
    <form action="run" method="post">
      <input type="radio" value="py" name="lang"/>

      <input type="submit" value="run"/>

      <textarea name="code"
                autocorrect="off"
                autocomplete="off"
                autocapitalize="off"
                spellcheck="false">{{.Code}}</textarea>
    </form>

    {{if .Output}}
      <div>
        <h2>output...</h2>
        <pre>{{.Output}}</pre>
      </div>
    {{end}}
  </div>
</body>
</html>
